<div>
    <form class="d-flex" asp-action="Index">

        <div class="col-8">
            <input class="form-control " type="text" name="searchInp" placeholder="Search By Name ... ">
        </div>
       <div>
            <input type="submit" value="search" class="btn btn-success">
        </div>
    </form>
</div>

<h1>All Employees </h1>
<br />
<br />

<a asp-controller="Employee" asp-action="Create" class=" btn btn-primary mt-5" > Create New Employee</a>
 
@if(Model.Count()> 0)
{
  <table class=" table table-hover table-striped">
      <thead>
          <tr>
                <th>@Html.DisplayNameFor(E=> E.Name)</th>
                <th>@Html.DisplayNameFor(E=> E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Address)</th>
                <th>@Html.DisplayNameFor(E => E.department)</th>
                <th>@Html.DisplayNameFor(E=> E.Salary)</th>
                <th>@Html.DisplayNameFor(E=> E.IsActive)</th>
                <th>@Html.DisplayNameFor(E=> E.Gender)</th>
                <th>@Html.DisplayNameFor(E=> E.Email)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Detete</th>
          </tr>
        </thead>
      <tbody>
            @foreach (var Employee in Model)
            {
               <tr>
                    <td>@Employee.Name</td>
                    <td>@Employee.Age</td>
                    <td>@Employee.Address</td>
                    <td>@Employee.department?.Name</td>      @*check Do department have Employee ?*@
                    <td>@Employee.Salary</td>
                    <td>@Employee.IsActive</td>
                    <td>@Employee.Gender</td>
                    <td>@Employee.Email</td>
                  
                     <partial name="_ButtonPartial" model="@Employee.Id"></partial>
                  
               </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no Employee </h3>
    </div>
}